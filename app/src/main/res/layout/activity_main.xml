<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.libor.sq1_libor_danniel_isiah.MainActivity"
    android:orientation="vertical"
    android:background="@drawable/etona">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        tools:ignore="ScrollViewSize,UselessParent">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/textViewMsg"
            tools:ignore="HardcodedText,InefficientWeight,Suspicious0dp"
            android:text="Yauvani Pearl Milk Tea"
            android:layout_height="20dp"
            android:textStyle="normal|bold|italic"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Okinawa  **Small**No add ons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textFlavor"
                android:layout_weight="1"
                tools:ignore="HardcodedText,InefficientWeight"
                android:textColor="@android:color/background_light"
                android:textSize="14sp"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Tap Images for more Flavor/AddOns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewInstn"
                android:layout_weight="1"
                tools:textColor="@android:color/background_dark"
                tools:ignore="HardcodedText,InefficientWeight"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:weightSum="1"
            tools:ignore="InefficientWeight"
            android:layout_weight="0.12">

            <ImageButton
                android:layout_width="170dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/milktea5"
                android:id="@+id/imageButtonTea"
                android:scaleType="fitCenter"
                android:visibility="visible"
                android:contentDescription=""
                tools:ignore="ContentDescription,NestedWeights"
                android:background="@android:color/transparent" />

            <ImageButton
                android:layout_width="161dp"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imageButtonAddons"
                tools:ignore="ContentDescription,NestedWeights"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <TextView
            android:text="@string/textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textSugarlevel"
            tools:text="No Sugar"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarSugarLevel"
            android:max="4" />

        <TextView
            android:text="@string/small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textSize"
            android:textColor="@android:color/black"
            tools:text="Small"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarSize"
            android:max="2" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Price Per Unit"
                android:layout_width="185dp"
                android:layout_height="match_parent"
                android:id="@+id/textView"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                tools:ignore="HardcodedText"
                android:textColor="@android:color/holo_red_dark" />

            <TextView
                android:text="P 50.00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textPrice"
                tools:ignore="HardcodedText,InefficientWeight,NestedWeights"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold"
                android:fontFamily="sans-serif"
                android:typeface="normal"
                android:layout_weight="1"
                android:textAlignment="viewEnd" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="37dp">

            <TextView
                android:text="Add Ons "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textAddons"
                android:layout_weight="1.62"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                tools:ignore="HardcodedText,InefficientWeight"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:text="TextView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/textAddonPrice"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/black"
                tools:ignore="HardcodedText,InefficientWeight"
                android:textAlignment="viewEnd" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            tools:ignore="UselessLeaf">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textExPrice"
                android:layout_weight="0.05"
                android:textSize="18sp"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold"
                tools:ignore="HardcodedText,InefficientWeight"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="X # of Order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_weight="3.18"
                android:textSize="18sp"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="normal|bold"
                tools:ignore="HardcodedText,InefficientWeight" />

            <EditText
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/textNoOrder"
                android:text="1"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="normal|bold"
                tools:ignore="HardcodedText"
                android:gravity="right"
                android:layout_gravity="right" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="0.14"
            android:layout_height="30dp">

            <TextView
                android:text="Total Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                tools:ignore="HardcodedText,NestedWeights" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textTotalPrice"
                android:layout_weight="1"
                android:textAlignment="viewEnd"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <ToggleButton
                android:text="ToggleButton"
                android:layout_height="wrap_content"
                android:id="@+id/toggleOrderType"
                android:textOff="Take-Out"
                android:textOn="Dine-In"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                tools:textColor="@android:color/holo_red_dark"
                android:checked="false"
                android:layout_width="wrap_content"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:elevation="1dp"
                tools:ignore="HardcodedText"
                android:layout_weight="0.80" />

            <Button
                android:text="Add to Cart"
                android:layout_height="wrap_content"
                android:id="@+id/btnAddtoCart"
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textStyle="normal|bold"
                android:layout_width="wrap_content"
                android:elevation="0dp" />

            <Button
                android:text="View Cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnView"
                android:textStyle="normal|bold"
                android:textColor="@android:color/black"
                android:layout_weight="0.19"
                tools:ignore="HardcodedText" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
