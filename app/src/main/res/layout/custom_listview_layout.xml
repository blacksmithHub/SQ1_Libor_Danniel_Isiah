<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical|center_horizontal"
    android:padding="5dp"
    android:background="@drawable/border"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal">

        <ImageView
            android:id="@+id/teaOrderImg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:focusable="false"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/addOnOrderImg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            android:focusable="false"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/linearLayout3"
        android:orientation="vertical"
        tools:ignore="RtlHardcoded">

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:textColor="#ffffff"
            android:background="@drawable/delete"
            android:text="X"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/linearLayout2"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:layout_alignTop="@+id/linearLayout2"
        android:layout_alignBottom="@+id/linearLayout2"
        android:gravity="center_vertical"
        tools:ignore="RtlHardcoded,RtlSymmetry">

        <TextView
            android:id="@+id/txtOrderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="Medium Text"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
        android:id="@+id/txtOrderPrice" />

        <TextView
            android:id="@+id/txtOrderAddOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:id="@+id/txtOrderSugarSize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:id="@+id/txtOrderType" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:id="@+id/txtOrderQty" />

    </LinearLayout>

</RelativeLayout>
